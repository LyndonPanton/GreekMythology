{
  "name": "greekmythology",
  "version": "1.0.0",
  "description": "learn about subjects in ancient Greek Mythology such as gods, titan, demigods, monsters, locations, events and more",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LyndonPanton/GreekMythology.git"
  },
  "keywords": [
    "gulp",
    "node",
    "npm",
    "sass",
    "greek",
    "mythology",
    "javascript"
  ],
  "author": "Lyndon Panton",
  "license": "ISC",
  "eslintConfig": {
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "warn",
            "tab"
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "warn",
            "always"
        ]
      }
    }
  },
  "bugs": {
    "url": "https://github.com/LyndonPanton/GreekMythology/issues"
  },
  "homepage": "https://github.com/LyndonPanton/GreekMythology#readme",
  "devDependencies": {
    "eslint": "^6.4.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^6.1.0",
    "gulp-inject": "^5.0.4",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-uglify": "^3.0.2"
  }
}
